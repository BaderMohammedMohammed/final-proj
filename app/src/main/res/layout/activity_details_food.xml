<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".DetailsTopic">

        <LinearLayout
            android:id="@+id/toolbar_details_topics_Screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            android:padding="16dp"
            android:weightSum="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_back_detailstopics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="0.1"
                android:src="@drawable/ic_arrow_paper" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="@string/detailsfood"
                android:textColor="@color/bader_green"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/countlike_detailsfood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="15"
                android:textColor="@color/bader_green"
                android:textSize="24sp"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/img_addlike_detailsfood"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:src="@drawable/like_false" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_details_topics_Screen">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/img_content_detailsfood"
                    android:layout_width="match_parent"
                    android:layout_height="196dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/shape_corner24"
                    android:src="@drawable/donat" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_title_detailsfood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif-black"
                android:gravity="start"
                android:text="الدونات"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_numof_people_eat_detailsfood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_people"
                    android:drawablePadding="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center|start"
                    android:text="@string/numof_people"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_time_prepare_detailsfood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_time"
                    android:drawablePadding="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center|start"
                    android:text="50دقيقة"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_date_publisher_eat_detailsfood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_calendar_month"
                    android:drawablePadding="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center|start"
                    android:text="4:50 م"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profileuser_detailsfood"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/profile_img"/>

                <TextView
                    android:id="@+id/tv_name_publisher_detailsfood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:drawablePadding="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/name_publisher"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:padding="16dp">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:fontFamily="sans-serif-condensed"
        android:text="المكونات"
        android:textColor="@color/bader_green"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tv_num_comment_to_eat_detailsfood"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:drawablePadding="4dp"
        android:drawableEnd="@drawable/ic_insert_comment"
        android:gravity="end"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:text="كن اول من يعلق"
        android:textColor="@color/black"/>
</LinearLayout>

            <TextView
                android:id="@+id/tv_components_detailsfood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="start"
                android:background="@color/grayback"
                android:padding="4dp"
                android:text="\nكوب حليب دافي\nملفقة كبيرة خميرة فورية\nملعقة كبيرة سكر\nربع كوب زيت\nرشة ملح بيضة
فريلة (طحين)حوالي كوبين\nللتزيين شكولا"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="طريقة التحضير"
                android:textColor="@color/bader_green"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_howtomake_detailsfood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="start"
                android:text="نخلط الحليب الخميرة السكر والزيت حتى يتفاعلو جيدا ثم
نضيف البيضة والملح،
تضيف الفرينة حتى تحصل على عجينة متماسكة طرية تميل الى الاتصاق
نغطي العجينة ونتركها ترتاح وتختمر 30د نفرد العجينة بسمك اسم ثم نقصها بقوالب دائرية وفي كل مرة نرش الفرينة حتى لا تلتصق لتركها تختمر مرة اخرى
حوالي 5د نقلي الدوائر في الزيت ثم نزينها بالشكولا بعدما نذيبها في حمام مائي ."
                android:background="@color/grayback"
                android:padding="4dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="@string/comments"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/lv_comment_detailsfood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <EditText
                        android:id="@+id/writecomment_detailsfood"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:hint="أكتب تعليقا"
                        android:padding="8dp"
                        android:background="@drawable/shape_corner24"
                        android:overScrollMode="ifContentScrolls"
                        android:defaultFocusHighlightEnabled="false"
                        android:textColorHint="@color/bader_green" />
                    <ImageView
                        android:id="@+id/img_insart_comment_detailsfood"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_paper"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>