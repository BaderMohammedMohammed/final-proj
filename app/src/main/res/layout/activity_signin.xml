<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SigninActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:background="@drawable/design_screen">

        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center|top"
            android:src="@drawable/logo_project" />

        <TextView
            android:id="@+id/signin_tv_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="أهلا بك مجددا"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/signin_tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_35sdp"
            android:text="الرجاء ادخال البيانات لمواصلة استخدام التطبيق"
            android:textColor="#fff"
            android:textSize="13sp" />

    </FrameLayout>

    <EditText
        android:id="@+id/signin_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:hint="ادخل البريد الالكتروني"
        android:textColorHint="@color/bader_green"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        >
    </EditText>



    <EditText
        android:id="@+id/signin_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ادخل كلمة السر"
        android:textColorHint="@color/bader_green"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        >
    </EditText>



    <TextView
        android:id="@+id/signin_tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="هل نسيت كلمة السر ؟"
        android:textColor="#1C0808"
        android:textSize="13sp" />

    <Button
        android:id="@+id/signin_btn_save"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/btn_save"
        android:text="تسجيل الدخول"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/signin_tv_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ليس لديك حساب ؟ "
            android:textColor="#1C0808"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/signin_tv_registar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سجل الان "
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/bader_green"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>




</LinearLayout>