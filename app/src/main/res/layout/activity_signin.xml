<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninActivity">

    <TextView
        android:id="@+id/signin_tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="أهلا بك مجددا"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_gravity="top|center"
 />

    <TextView
        android:id="@+id/signin_tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="85dp"
        android:text="الرجاء ادخال البيانات لمواصلة استخدام التطبيق"
        android:textColor="#1C0808"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/signin_tv_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="120dp"
        android:layout_marginStart="40dp"
        android:text="ليس لديك حساب ؟ "
        android:textColor="#1C0808"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/signin_tv_registar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="100dp"
        android:text="سجل الان "
        android:textColor="@color/purple_500"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/signin_tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginTop="75dp"
        android:layout_marginStart="22dp"
        android:text="هل نسيت كلمة السر"
        android:textColor="#1C0808"
        android:textSize="13sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signin_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/purple_500"
        android:layout_marginTop="180dp"
        android:hint="ادخل البريد الالكتروني">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="40dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signin_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:textColorHint="@color/purple_500"
        android:hint="ادخل كلمة السر">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="40dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/signin_btn_save"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="150dp"
        android:layout_weight="1"
        android:background="@drawable/btn_save"
        android:text="حفظ التعديل" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>