<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/img_arrowEmail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_left" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:background="#F1F9FF"
        android:paddingTop="13dp"
        android:paddingEnd="25dp"
        android:paddingBottom="13dp"
        android:text="تغيير الايميل"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_arrowEmail" />

    <EditText
        android:id="@+id/et_oldEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/et"
        android:layout_marginTop="25dp"
        android:paddingStart="20dp"
        android:hint="الايميل القديم"
        android:inputType="textEmailAddress"
        android:paddingTop="10dp"
        android:paddingEnd="25dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/et_newEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/et"
        android:layout_marginTop="8dp"
        android:hint="الايميل الجديد"
        android:paddingStart="20dp"
        android:inputType="textEmailAddress"
        android:paddingTop="10dp"
        android:paddingEnd="25dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_oldEmail" />

    <Button
        android:id="@+id/btn_YseEmail"
        android:layout_width="99dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/btn_yse"
        android:gravity="center"
        android:text="نعم"
        android:textColor="@color/white"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_newEmail" />

    <Button
        android:id="@+id/btn_NoEmail"
        android:layout_width="99dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/btn_no"
        android:gravity="center"
        android:text="لا"
        android:textColor="@color/white"
        android:textSize="27sp"
        app:layout_constraintStart_toEndOf="@+id/btn_YseEmail"
        app:layout_constraintTop_toBottomOf="@+id/et_newEmail" />
</androidx.constraintlayout.widget.ConstraintLayout>