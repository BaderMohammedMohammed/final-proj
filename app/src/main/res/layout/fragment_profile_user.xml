<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.FragmentProfileUser">

    <FrameLayout
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="end"
        android:background="@drawable/profile_img">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/_20ssp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textColor="@color/white"
            android:layout_gravity="center|end"
            android:text="Profile User"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile1"
        android:layout_marginTop="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="start"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_gender1"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="8dp"
                android:text="الجنس : "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="@dimen/_10sdp"
                android:paddingStart="@dimen/_15sdp"
               android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/tv_fragment_profile"
                android:padding="8dp"
                android:text="ذكر"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_length1"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="8dp"
                android:text="الطول : "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tv_length"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="@dimen/_10sdp"
                android:paddingStart="@dimen/_15sdp"
                android:background="@drawable/tv_fragment_profile"
                android:padding="8dp"
                android:text="150"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_weight1"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="8dp"
                android:text="الوزن : "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="@dimen/_10sdp"
                android:paddingStart="@dimen/_15sdp"
                android:background="@drawable/tv_fragment_profile"
                android:padding="8dp"
                android:text="80 كج"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_current_diseases1"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="8dp"
                android:text="الامراض الحالية :"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tv_current_diseases"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:layout_margin="@dimen/_10sdp"
                android:paddingStart="@dimen/_15sdp"
                android:background="@drawable/tv_fragment_profile"
                android:padding="8dp"
                android:text="السكر"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_age1"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="8dp"
                android:text="العمر : "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tv_age"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="@dimen/_10sdp"
                android:paddingStart="@dimen/_15sdp"
                android:background="@drawable/tv_fragment_profile"
                android:padding="8dp"
                android:text="20"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_previous_illnesses1"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="8dp"
                android:text="الامراض السابقة:"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tv_previous_illnesses"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:layout_margin="@dimen/_10sdp"
                android:paddingStart="@dimen/_15sdp"
                android:background="@drawable/tv_fragment_profile"
                android:padding="8dp"
                android:text="سكر"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_smoked1"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="8dp"
                android:text="مدخن : "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tv_smoked"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="@dimen/_10sdp"
                android:paddingStart="@dimen/_15sdp"
                android:background="@drawable/tv_fragment_profile"
                android:padding="8dp"
                android:text="لا"
                android:textSize="20sp" />

        </LinearLayout>







    </LinearLayout>
    </ScrollView>
</LinearLayout>